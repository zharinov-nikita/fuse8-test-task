{
  "compilerOptions": {
      "target": "ESNext",
      "useDefineForClassFields": true,
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "allowJs": false,
      "skipLibCheck": true,
      "esModuleInterop": false,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "baseUrl": "src",
      "paths": {
          "@shared": ["00-shared/index"],
          "@entities": ["01-entities/index"],
          "@features": ["02-features/index"],
          "@widgets": ["03-widgets/index"],
          "@pages": ["04-pages/index"],
          "@process": ["05-process/index"],
          "@app": ["06-app/index"],
          "@tests": ["../tests/index"]
      }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}